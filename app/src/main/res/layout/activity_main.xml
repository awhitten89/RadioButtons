<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="radiobuttons.alan.com.radiobuttons.MainActivity"
    android:background="#cf7e4f">

    <TextView
        android:id="@+id/title"
        android:text="@string/title_name"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <RadioGroup
        android:id="@+id/radioGroup_id"
        android:layout_below="@+id/title"
        android:layout_marginTop="23dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RadioButton
            android:id="@+id/radioButton_yes"
            android:text="@string/positive_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radioButton_no"
            android:text="@string/negative_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radioButton_maybe"
            android:text="@string/maybe_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <Button
        android:id="@+id/choiceBtn"
        android:text="@string/btn_title"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/radioGroup_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/showChoice"
        android:layout_below="@+id/choiceBtn"
        android:layout_marginTop="23dp"
        android:layout_centerHorizontal="true"
        android:textSize="23dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
